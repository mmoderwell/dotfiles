[bar/mainbar]
;monitor = ${env:MONITOR:HDMI-1}
bottom = true
width = 96%
height = 40
offset-x = 2%
offset-y = 1px
radius = 2
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

;line-size = 4
;line-color = #f00

border-size = 10
border-color = #00000000



padding-left = 0
padding-right = 0

; Number of spaces to add before/after each module
; Individual side values can be defined using:
; module-margin-{left,right}
module-margin-left = 1
module-margin-right = 1

# font-0 = fixed:pixelsize=12;1
# font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
# font-2 = siji:pixelsize=12;1

font-0 = Hack:fontformat=truetype:size=12;1
font-1 = MaterialIcons:fontformat=truetype:size=14;3

modules-left = i3
modules-center = xwindow
modules-right = volume battery filesystem memory cpu date

;tray-position = right
;tray-padding = 12px
;tray-transparent = false
;tray-background = #0063ff
; Tray offset defined as pixel value (e.g. 35) or percentage (e.g. 50%)
;tray-offset-y = 0%
;tray-offset-x = 0%
; Tray icon max size
;tray-maxsize = 16
;tray-detached = true
; Scale factor for tray clients
;tray-scale = 1.0

;wm-restack = i3
override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%
label-padding = 2
label-foreground = ${colors.color7}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.color15}

[module/i3]
type = internal/i3
;format = <label-state> <label-mode>
;index-sort = true
;wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true
label-mode =%mode%
label-mode-padding = 2
label-mode-foreground = ${colors.color0}
label-mode-background = ${colors.color3}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.color7}
label-focused-underline = ${colors.color7}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.color7}
label-visible-underline = ${colors.color7}
label-visible-padding = 4

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.color1}
label-urgent-forground = #000
label-urgent-padding = 2

[module/mpd]
type = internal/mpd
